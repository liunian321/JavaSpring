<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--配置bean
        bean标签：配置bean对象
            属性：
                id:定义bean的名称，在当前的ioc容器中全局唯一
                class:资源的全限定名称
    -->
    <bean id="userImpl" class="com.tds.ehiam.dao.UserImpl" init-method="init" destroy-method="destroy">

    </bean>

    <bean id="userBean" class="com.tds.ehiam.bean.User">
        <property name="userName" value="张三"/>
        <property name="gender" value="男"/>
        <property name="age" value="21"/>
        <!--集合类型-->
        <property name="address">
            <list>
                <value>上海</value>
                <value>北京</value>
                <value>南京</value>
            </list>
        </property>
        <!--Map类型-->
        <property name="score">
            <map>
                <entry key="语文" value="90"/>
                <entry key="数学" value="92"/>
                <entry key="英语" value="97"/>
            </map>
        </property>
        <!--数组类型-->
        <property name="hobby">
            <array>
                <value>打篮球</value>
                <value>游泳</value>
                <value>跑步</value>
            </array>
        </property>
    </bean>
</beans>